@model CreateReservationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" name="FlightId" value="@ViewData["FlightId"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketType" class="control-label"></label>
                <select asp-for="TicketType" class="form-control" id="typeDropdown">
                    <option value="Business">Business</option>
                    <option value="Economic">Economic</option>
                </select>
                <span asp-validation-for="TicketType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Firstname" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Firstname">First name</label>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div><div class="form-floating mb-3">
                <input asp-for="MiddleName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="MiddleName">Middle name</label>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="LastName">Last name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="PhoneNumber">Phone number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Nationality" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Nationality">Nationality</label>
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UCN" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="UCN">UCN</label>
                <span asp-validation-for="UCN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>