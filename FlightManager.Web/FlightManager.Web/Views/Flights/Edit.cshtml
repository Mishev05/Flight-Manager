@model EditFlightViewModel

<h2>Edit flight</h2>

<div class="row">
    <div class="col-md-4">    </div>
    <div class="col-md-4">
        <form id="registerForm" asp-action="Edit" method="post">
            <h2>Edit flight</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="ArrivalTown" class="form-control" aria-required="true" />
                <label asp-for="ArrivalTown">Arrival town</label>
                <span asp-validation-for="ArrivalTown" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PilotName" class="form-control" aria-required="true" />
                <label asp-for="PilotName">Pilot name</label>
                <span asp-validation-for="PilotName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            

            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </form>
    </div>
