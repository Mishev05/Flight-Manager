@model CreateFlightViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="DepartureTown" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="DepartureTown">Departure town</label>
                <span asp-validation-for="DepartureTown" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ArrivalTown" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="ArrivalTown">ArrivalTown</label>
                <span asp-validation-for="ArrivalTown" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaneType" class="control-label"></label>
                <select asp-for="PlaneType" class="form-control" id="typeDropdown">
                    <option value="PrivateJet">Private jet</option>
                    <option value="Cargo">Cargo</option>
                    <option value="TurbopropAircraft">Turboprop aircraft</option>
                </select>
                <span asp-validation-for="PlaneType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UniquePlaneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="UniquePlaneNumber">Unique plane number</label>
                <span asp-validation-for="UniquePlaneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="RegularCapacity" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="RegularCapacity">Regular Capacity</label>
                <span asp-validation-for="RegularCapacity" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="BusinessCapacity" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="BusinessCapacity">Business Capacity</label>
                <span asp-validation-for="BusinessCapacity" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PilotName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="PilotName">Pilot Name</label>
                <span asp-validation-for="PilotName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
